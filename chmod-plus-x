#!/usr/bin/env bash
script="$(basename "$0")"
scriptPath="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)"
scriptsPath="$scriptPath/src/scripts"
script="$scriptPath/$script"
echo "$script: Starting."
"$scriptsPath/src/scripts/devspace/setup/set-env-vars.sh"
git add "$KINDEST_ARGO_CD_PROJECT_ROOT"
chmod +x "$KINDEST_ARGO_CD_PROJECT_ROOT/build-devspace"
chmod +x "$KINDEST_ARGO_CD_PROJECT_ROOT/clean-devspace"
chmod +x "$KINDEST_ARGO_CD_PROJECT_ROOT/test-devspace"
chmod +x "$KINDEST_ARGO_CD_PROJECT_ROOT/generate-devcerts"
chmod -R +x "$KINDEST_ARGO_CD_PROJECT_ROOT/commands"
"$scriptsPath/utils/chmod-plus-x.sh"
echo "$script: Finished."
